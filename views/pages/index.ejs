<body>

<div class="container" id="c1">
    <h1> User login </h1>
    <p> Sign into your account </p>
    <span class="error-msg" id="er-msg"></span>
    <form name="form" class="box" onsubmit="return checkLogin()">
        <div class="input">
            <label>
                <input type="text" name="email" placeholder="Email" autocomplete="on">
                <input id="pwd" name="password" type="password" placeholder="Password" autocomplete="off">
                <i class="fas fa-eye" id="eye" onclick="toggleViewPWD()"></i>
            </label>
        </div>
        <label>
            <input type="checkbox">
            <span></span>
            <small class="rmb-me">Remember me</small>
        </label>
        <input type="submit" value="Sign in" class="btn">
    </form>
</div>

